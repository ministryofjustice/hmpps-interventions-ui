{% extends "../../../partials/layout.njk" %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/textarea/macro.njk" import govukTextarea %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set pageTitle = "HMPPS Interventions" %}
{% block pageTitle %}{{ pageTitle }} - GOV.UK{% endblock %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <span class="govuk-caption-l">Page 2 of 7</span>
      <h1 class="govuk-heading-l">
       Changes to circumstances, needs or risks
      </h1>
    <form action="#" method="#">  
    {{ govukRadios({
      idPrefix: "any-changes",
      name: "any-changes",
      fieldset: {
        legend: {
          text: "Have you identified any changes to Matt's circumstances needs or risks?",
          isPageHeading: false,
          classes: "govuk-fieldset__legend--m"
        }
      },
      items: [
        {
          value: "Yes",
          text: "Yes"
        },
        {
          value: "No",
          text: "No"
        }
      ]
    }) }}
    {{ govukTextarea({
      name: "more-detail",
      id: "more-detail",
      label: {
        text: "Add information about the circumstances, needs or risks that have changed:",
        classes: "govuk-label--s govuk-!-padding-bottom-3"
      }
    }) }}
    {{ govukButton({
      text: "Save and continue"
    }) }}
    </form>
  </div>

  <div class="govuk-grid-column-one-third">
    <h2 class="govuk-heading-m">One-third column</h2>
    <p class="govuk-body">one-third wide column</p>
  </div>
</div>

{% endblock %}

{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}

{% extends "../partials/layout.njk" %}

{% set pageTitle = "Action plan" %}
{% set pageSubTitle = "Submission confirmation" %}

{% block pageContent %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {{ govukPanel({titleText: "Action plan submitted"}) }}

      {{ govukSummaryList(summaryListArgs) }}

      <p class="govuk-body">
      {{ presenter.text.whatHappensNext }}
      </p>

      <a href="{{ presenter.progressHref }}" class="govuk-button">Return to service progress</a>
    </div>
  </div>
{% endblock %}

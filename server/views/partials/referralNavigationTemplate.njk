{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "moj/components/sub-navigation/macro.njk" import mojSubNavigation %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}

{% extends "./layout.njk" %}

{% block pageContent %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {{ govukBackLink(backLinkArgs) }}
      {% if notificationBannerArgs %}
          {{ govukNotificationBanner(notificationBannerArgs) }}
      {% endif %}
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <h1 class="govuk-heading-l">{{ presenter.text.title }}</h1>
        </div>
        <div class="govuk-grid-column-one-third">

          {% if presenter.canWithdraw %}
              <a href={{presenter.withdrawReferralHref}}>
                  {{ govukButton({
                    text: presenter.withdrawalButtonText,
                    classes: "govuk-button--secondary"
                  }) }}
              </a>
          {% endif %}
        </div>
      </div>

      {{ mojSubNavigation(subNavArgs) }}

      {% block referralPageSection %}{% endblock %}


  </div>
  </div>
{% endblock %}

{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "moj/components/sub-navigation/macro.njk" import mojSubNavigation %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}

{% extends "./layout.njk" %}

{% block pageContent %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {{ govukBackLink(backLinkArgs) }}

      {% if presenter.showSuccess %}
         {{ govukNotificationBanner(notificationBannerArgs) }}
      {% endif %}

      <h1 class="govuk-heading-l">{{ presenter.text.title }}</h1>

      {{ mojSubNavigation(subNavArgs) }}

      {% block referralPageSection %}{% endblock %}

    </div>
  </div>
{% endblock %}

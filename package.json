{
  "name": "hmpps-interventions-ui",
  "version": "0.0.1",
  "description": "HMPPS Interventions UI",
  "repository": "git@github.com:ministryofjustice/hmpps-interventions-ui.git",
  "license": "MIT",
  "scripts": {
    "copy-views": "cp -R server/views dist/server/",
    "watch-views": "nodemon --watch server/views -e html,njk -x npm run copy-views",
    "watch-ts": "tsc -w",
    "watch-node": "DEBUG=gov-starter-server* DB_PORT=5433 nodemon --watch dist/ dist/server.js | bunyan -o short",
    "start:dev": "npm run record-build-info -- --dev && npm run build && concurrently -k -p \"[{name}]\" -n \"Views,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-views\" \"npm run watch-ts\" \"npm run watch-node\"",
    "build": "npm run css-build && tsc && npm run copy-views",
    "css-build": "./bin/build-css",
    "clean": "rm -rf dist/* .port.tmp *.log build/* uploads/* test-results.xml build-info.json",
    "typecheck": "tsc",
    "record-build-info": "node ./bin/record-build-info",
    "lint": "eslint . --cache --max-warnings 70"
  },
  "engines": {
    "npm": ">=6",
    "node": ">=14.*"
  },
  "nodemonConfig": {
    "ignore": [
      ".circleci/*",
      "migrations/*",
      "node_modules/*",
      "test/*",
      "integration-tests/*"
    ],
    "delay": "2500",
    "ext": "js,json,html,njk"
  },
  "lint-staged": {
    "*.{ts,js,css}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@ministryofjustice/frontend": "0.0.21",
    "bunyan": "^1.8.14",
    "bunyan-format": "^0.2.1",
    "bunyan-request-logger": "^2.1.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "govuk-elements-sass": "^3.1.3",
    "govuk-frontend": "^3.9.1",
    "http-errors": "^1.8.0",
    "moment": "^2.29.1",
    "nunjucks": "^3.2.2"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.6",
    "@types/express": "^4.17.8",
    "@types/http-errors": "^1.8.0",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.12.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.14.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "nodemon": "^2.0.6",
    "node-sass": "^4.14.1",
    "prettier": "^2.1.2",
    "typescript": "^4.0.3"
  }
}

{
  "name": "hmpps-interventions-ui",
  "version": "0.0.1",
  "description": "HMPPS Interventions UI",
  "repository": "git@github.com:ministryofjustice/hmpps-interventions-ui.git",
  "license": "MIT",
  "scripts": {
    "build:views": "cp -R server/views dist/server/",
    "build:sass": "sass --no-source-map --load-path=node_modules/govuk-frontend --load-path=node_modules/@ministryofjustice/frontend ./assets/sass/application.sass:./assets/stylesheets/application.css ./assets/sass/application-ie8.sass:./assets/stylesheets/application-ie8.css --style compressed",
    "build:typecheck": "tsc",
    "build:typecheck:prod": "tsc --build tsconfig.prod.json",
    "build:typecheck:browser": "cd browser && tsc",
    "build:prod": "npm run build:sass && npm run build:typecheck:prod && npm run build:views && npm run build:typecheck:browser",
    "build": "npm run build:sass && npm run build:typecheck && npm run build:views && npm run build:typecheck:browser",
    "watch:ts:server": "tsc -w",
    "watch:ts:browser": "cd browser && tsc -w",
    "watch:views": "nodemon --watch server/views -e html,njk -x npm run build:views",
    "watch:sass": "npm run build:sass -- --watch",
    "watch:node": "nodemon --watch dist/ --async-stack-traces --inspect dist/server.js | bunyan -o short",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Views,TypeScript (server),TypeScript (browser),Node,Sass\" -c \"yellow.bold,cyan.bold,magenta.bold,green.bold,blue.bold\" \"npm run watch:views\" \"npm run watch:ts:server\" \"npm run watch:ts:browser\" \"npm run watch:node\" \"npm run watch:sass\"",
    "scripts:typecheck": "cd script && tsc",
    "start": "node $NODE_OPTIONS $INTERVENTIONS_SERVER_NODE_OPTIONS dist/server.js",
    "start:dev": "npm run build && NODE_ENV=development npm run watch",
    "start:test": "export $(cat test.env) && npm run start",
    "test": "jest --runInBand",
    "int-test": "cypress run --config video=false",
    "int-test-ui": "cypress open",
    "record-build-info": "node ./bin/record-build-info",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "lint": "eslint . --cache --max-warnings 0 && stylelint **/*.scss",
    "clean": "rm -rf dist build node_modules stylesheets browser/build",
    "generate-frontend-types": "ts-node script/generateGovukFrontendTypes/runner.ts && prettier --write server/utils/govukFrontendTypes.ts",
    "prepare": "husky install"
  },
  "engines": {
    "npm": ">=6",
    "node": ">=14"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "server/**/*.{ts,js,jsx,mjs}"
    ],
    "testMatch": [
      "<rootDir>/(server|job)/**/?(*.)(spec|test).{ts,js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test_results/jest/"
        }
      ],
      [
        "./node_modules/jest-html-reporter",
        {
          "outputPath": "test_results/unit-test-reports.html"
        }
      ]
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "node",
      "ts"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      ".circleci/*",
      "migrations/*",
      "node_modules/*",
      "test/*",
      "integration_tests/*"
    ],
    "delay": 2500,
    "ext": "js,json,html,njk"
  },
  "lint-staged": {
    "*.{ts,js,css}": [
      "prettier --write",
      "eslint --fix --max-warnings 0"
    ],
    "**/*.scss": [
      "stylelint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "//": "tar is not a direct dependency of our project; weâ€™ve only added it here to remove a security vulnerability introduced by a transitive dependency. This should be removed; see IC-2177",
  "dependencies": {
    "@ministryofjustice/frontend": "1.0.1",
    "@sentry/node": "^6.16.0",
    "@types/connect-flash": "0.0.37",
    "@types/uuid": "^8.3.3",
    "agentkeepalive": "^4.1.3",
    "applicationinsights": "^2.2.0",
    "aws-sdk": "^2.1046.0",
    "body-parser": "^1.19.0",
    "bunyan": "^1.8.15",
    "compression": "^1.7.4",
    "connect-flash": "^0.1.1",
    "connect-redis": "^6.0.0",
    "cookie-session": "^1.4.0",
    "csurf": "^1.11.0",
    "csvtojson": "^2.0.10",
    "date-fns": "^2.27.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-request-id": "^1.4.1",
    "express-session": "^1.17.1",
    "express-validator": "^6.13.0",
    "govuk-elements-sass": "^3.1.3",
    "govuk-frontend": "^3.14.0",
    "helmet": "^4.1.1",
    "http-errors": "^1.8.1",
    "indefinite": "^2.4.1",
    "joi": "^17.5.0",
    "jquery": "^3.5.1",
    "jwt-decode": "^2.2.0",
    "nocache": "^3.0.1",
    "nunjucks": "^3.2.3",
    "passport": "^0.5.0",
    "passport-oauth2": "^1.6.1",
    "redis": "^3.1.1",
    "superagent": "^6.1.0",
    "tar": "^6.1.11",
    "timezone-support": "^2.0.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@pact-foundation/pact": "^9.17.0",
    "@types/bunyan": "^1.8.8",
    "@types/bunyan-format": "^0.2.4",
    "@types/compression": "^1.7.2",
    "@types/connect-redis": "0.0.18",
    "@types/cookie-session": "^2.0.43",
    "@types/csurf": "^1.11.2",
    "@types/express-request-id": "^1.4.3",
    "@types/express-session": "^1.17.4",
    "@types/http-errors": "^1.8.1",
    "@types/indefinite": "^2.3.1",
    "@types/jest": "^27.0.3",
    "@types/jquery": "^3.5.10",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/jwt-decode": "^2.2.1",
    "@types/nunjucks": "^3.2.0",
    "@types/passport": "^1.0.7",
    "@types/passport-oauth2": "^1.4.11",
    "@types/redis": "^2.8.32",
    "@types/superagent": "^4.1.13",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "concurrently": "^6.4.0",
    "cypress": "^9.1.1",
    "cypress-multi-reporters": "^1.5.0",
    "eslint": "^8.4.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "fishery": "^2.1.0",
    "husky": "^7.0.4",
    "jest": "^27.4.3",
    "jest-html-reporter": "^3.4.2",
    "jest-junit": "^13.0.0",
    "jest-pact": "^0.9.1",
    "jsonwebtoken": "^8.5.1",
    "lint-staged": "^12.1.2",
    "mocha": "^9.1.3",
    "mocha-junit-reporter": "^2.0.2",
    "nock": "^13.2.1",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "sass": "^1.44.0",
    "stylelint": "^14.1.0",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.1.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.3"
  }
}

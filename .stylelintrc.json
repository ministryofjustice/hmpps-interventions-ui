{
  "plugins": ["stylelint-scss"],
  "extends": "stylelint-config-sass-guidelines",
  "rules": {
    "color-named": null,
    "rule-empty-line-before": [
      "always-multi-line",
      {
        "except": "first-nested"
      }
    ],
    "max-nesting-depth": 2,
    "selector-class-pattern": null,
    "selector-max-id": 1
  }
}

{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2018",
    "lib": [
      "es2019"
    ],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "noEmit": false,
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "strict": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
  },
  "exclude": [
    "node_modules",
    "assets/**/*.js",
    "integration_tests",
    "dist",
    "script",
    "browser",
    "cypress.config.ts"
  ],
  "include": [
    "**/*.js",
    "**/*.ts"
  ]
}